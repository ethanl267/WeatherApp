<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.DisplayWeatherPage"
             Title="DisplayWeatherPage">


    <VerticalStackLayout Padding="20" Spacing="15">

        <Button Text="Get Weather by Location"
        Command="{Binding GetWeatherByLocationCommand}" />

        <!-- Loading indicator -->
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}" />

        <!-- Weather Output -->
        <Label Text="{Binding CurrentWeather.main.temp, StringFormat='Temperature: {0}Â°C'}"
               FontSize="24"
               HorizontalOptions="Center" />

        <Label Text="{Binding CurrentWeather.weather[0].description}"
               FontSize="18"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>